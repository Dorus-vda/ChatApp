<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/R.id.receiveContentHolderLayout"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_receive"
            android:padding="10dp"
            android:text="This is received message"
            android:textSize="18sp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/receiveImage"
            android:layout_width="200dp"
            android:layout_alignParentRight="false"
            android:layout_height="250dp"
            android:visibility="visible"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"></ImageView>


    </RelativeLayout>

    <TextView
        android:id="@+id/receivetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R.id.receiveContentHolderLayout"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="TEST"></TextView>

</RelativeLayout>